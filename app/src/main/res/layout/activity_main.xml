<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="monospace"/>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:text="@string/scan_btn_text"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:id="@+id/scan_btn"
        android:textColor="@color/colorAccent"
        android:background="@drawable/button_rounded_corners_border"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/code_hint_text"
        android:textAlignment="center"
        android:id="@+id/code_text"
        android:maxLines="1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_btn_text"
        android:layout_gravity="center"
        android:id="@+id/submit_btn"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/last_veri_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NULL_text"
        android:layout_marginLeft="30dp"
        android:id="@+id/lastVerifiedText"/>

</LinearLayout>